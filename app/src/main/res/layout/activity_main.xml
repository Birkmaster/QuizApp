<?xml version="1.0" encoding="utf-8"?>




    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0bec5"
    >

        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="org.example.android.justjava.MainActivity">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to the Quiz App!"
                android:textSize="24dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginBottom="16dp"
                android:textColor="#000000"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 1:"
                android:textSize="24dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginBottom="24dp"
                android:background="#ffff00"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What year did Columbus discover America?"
                android:textSize="18dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginBottom="24dp"
                android:background="#ff5722"/>
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton android:id="@+id/radio_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1490"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:onClick="onRadioButton1Clicked"
                        android:layout_marginRight="16dp"/>
                    <RadioButton android:id="@+id/radio_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1489"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:onClick="onRadioButton1Clicked"
                        android:layout_marginRight="16dp"/>
                    <RadioButton android:id="@+id/radio_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1492"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:onClick="onRadioButton1Clicked"
                        android:layout_marginBottom="24dp"/>

                </RadioGroup>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 2:"
                android:textSize="24dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginBottom="24dp"
                android:background="#ffff00"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is the capital America?"
                android:textSize="18dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginBottom="24dp"
                android:background="#ff5722"/>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:orientation="vertical">
                <RadioButton android:id="@+id/radio_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Washington D.C."
                    android:textAppearance="?android:textAppearanceMedium"
                    android:onClick="onRadioButton2Clicked"
                    android:layout_marginRight="16dp"/>
                <RadioButton android:id="@+id/radio_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New York"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:onClick="onRadioButton2Clicked"
                    android:layout_marginRight="16dp"/>
                <RadioButton android:id="@+id/radio_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Los Angeles"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:onClick="onRadioButton2Clicked"/>
                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_marginBottom="24dp"/>
            </RadioGroup>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 3:"
                android:textSize="24dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginBottom="24dp"
                android:background="#ffff00"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Where does the name America originate from?"
                android:textSize="18dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginBottom="24dp"
                android:background="#ff5722"/>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton android:id="@+id/radio_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amsterdam."
                    android:textAppearance="?android:textAppearanceMedium"
                    android:onClick="onRadioButton3Clicked"
                    android:layout_marginRight="16dp"/>
                <RadioButton android:id="@+id/radio_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amerigo Vespucci"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:onClick="onRadioButton3Clicked"
                    android:layout_marginRight="16dp"/>
                <RadioButton android:id="@+id/radio_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amerikum"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:onClick="onRadioButton3Clicked"/>
                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_marginBottom="24dp"/>
            </RadioGroup>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 4:"
                android:textSize="24dp"
                android:layout_marginBottom="24dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="#ffff00"/>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Which of these are official languages on the american continent?"
                android:textSize="18dp"
                android:layout_marginBottom="24dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="#ff5722"/>
            <CheckBox
                android:id="@+id/quiz_checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="French"
                android:textAppearance="?android:textAppearanceMedium" />

            <CheckBox
                android:id="@+id/quiz_checkbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="Russian"
                android:textAppearance="?android:textAppearanceMedium" />
            <CheckBox
                android:id="@+id/quiz_checkbox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="German"
                android:textAppearance="?android:textAppearanceMedium" />

            <CheckBox
                android:id="@+id/quiz_checkbox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="Spanish"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginBottom="24dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Check me!"
                android:onClick="checkBoxes"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 5:"
                android:textSize="24dp"
                android:layout_marginBottom="24dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="#ffff00"/>
            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How many states belong to the USA?"
                android:textSize="18dp"
                android:layout_marginBottom="24dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="#ff5722"/>
            <EditText
                android:id="@+id/number_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number"
                android:inputType="number"
                android:layout_marginBottom="24dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Check me!"
                android:onClick="checkNumber"
                android:layout_marginBottom="48dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dd2c00"
                android:text="SCORE"
                android:onClick="showScore"/>

        </LinearLayout>

    </ScrollView>

